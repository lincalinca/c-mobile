{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@lib/*": ["lib/*"],
      "@app/*": ["app/*"],
      "@db/*": ["db/*"],
      "@hooks/*": ["hooks/*"],
      "@assets/*": ["assets/*"],
      "@public/*": ["public/*"],
      "@root/*": ["*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}